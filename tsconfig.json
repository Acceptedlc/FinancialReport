{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceRoot": "./src",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/definitions",
    "sourceMap": true,
    "target": "es2015",
    "lib": [
      "es2015"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ]
}
